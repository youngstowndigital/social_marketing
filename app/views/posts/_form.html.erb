<%= form_for @post, data: { turbo: false }, local: true do |f| %>
    <% @post.errors.full_messages.each do |message| %>
        <div class="alert alert-danger" role="alert">
            <%= message %>
        </div>
    <% end %>
    <div class="py-2">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="py-2">
        <%= f.label :text %>
        <%= f.text_area :text, class: "form-control" %>
    </div>

    <div class="py-2">
        <%= f.label :schedule %>
        <%= f.datetime_field :schedule, class: "form-control" %>
    </div>

    <div class="py-2">
        <%= f.label :timezone %>
        <%= f.time_zone_select :timezone, nil, {:default => "Eastern Time (US & Canada)"}, {:class => 'form-control'} %>
    </div>

    <div class="py-2">
        <%= f.label :twitter_account %>
        <%= f.select :twitter_account_id, options_for_select(current_user.twitter_accounts.map {|t|[t.name, t.id]}), {}, { :class => 'form-control' } %>
    </div>

    <div class="py-2">
        <%= f.submit "Submit", class: "btn btn-primary" %>
        <%= link_to "Cancel", posts_path, class: "btn btn-danger" %>
    </div>
<% end %>
