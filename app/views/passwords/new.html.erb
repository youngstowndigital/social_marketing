<%= form_with url: passwords_path, scope: :user do |f| %>
    <div class="py-2">
        <%= f.label :email %>
        <%= f.email_field :email, required: true, class: "form-control" %>
    </div>
    <div class="py-2">
        <%= f.submit "Reset Password", class: "btn btn-primary" %>
    </div>
<% end %>
