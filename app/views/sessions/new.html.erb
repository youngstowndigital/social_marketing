<h1>Login</h1>
<%= form_with url: login_path, scope: :session, data: { turbo: false }, local: true do |f| %>
    <div class="py-2">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="py-2">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="py-2">
        Forgot password? Click <%= link_to "here", new_password_path %>
    </div>
    <div class="py-2">
        <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
<% end %>
